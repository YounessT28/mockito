pipeline
{
    agent any
    tools
    {
        	maven 'maven'
            jdk 'java-11'
    }
    stages
    {
        stage ('Initialize')
        {
                steps {
                    echo "maven"
                    echo "jdk"
                }
        }
        stage('Build')
        {
            steps
            {
                sh 'mvn clean package'
            }
            post
            {
                success
                {
                    junit '**/target/surefire-reports/*.xml'
                }
            }

        }
        stage('Deploy') {
            steps {
            script {
             deploy adapters: [tomcat9(credentialsId: 'manager', path: '/manager/text', url: 'http://vps-0c0ccce5.vps.ovh.net:8081')], contextPath: '/job9-youness', war: '**/*.war'
            }
            }
        }
    }
}